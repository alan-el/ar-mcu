#ifndef LT8619C_H
#define LT8619C_H

#define LT8619C_I2C_SDA_PIN_NUM     (19)
#define LT8619C_I2C_SCL_PIN_NUM     (20)

/* LT8619C settings */

/* reference resistance */
#define INTERNAL_RES        (0x88)  
#define EXTERNAL_RES        (0x80)

#define SDTV	0x00    // 480P 576P
#define SDPC	0x10    // 640x480 800x600 1024x768 etc
#define HDTV	0x20    // 720P 1080P
#define HDPC	0x30    // 1366x768 1600x900 etc

/*bt1120 config add 20181129*/
#define BT656_OUTPUT	0x34
#define BT1120_OUTPUT   0x33

#define YC_SWAP_EN      0x08           
#define YC_SWAP_DIS     0x00  

// BT1120 20bit / BT656 10bit
#define OUTPUT_20BIT_HIGH       0x04    
// BT1120 20bit / BT656 10bit
#define OUTPUT_20BIT_LOW        0x05     
// BT1120 16bit / BT656 8bit
#define OUTPUT_16BIT_HIGH       0x06    
// BT1120 16bit / BT656 8bit
#define OUTPUT_16BIT_LOW        0x07     


#define LT8619C_I2C_ADDR            (0x64 >> 1)


typedef  enum
{
	LOW = 0,
	HIGH = !LOW
}
Pin_Status;

void lt8619c_init(void);

#endif


